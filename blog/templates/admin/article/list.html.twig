{% extends "layout.html.twig" %}

{% block title 'Admin article' %}
    
{% block content %}
    <h1>Gestion Articles</h1>
    
    <!-- On ajoute un lien vers la vue d'edition des articles -->
    <p><a href="">Nouvelle rubrique</a></p>
    
    <table class='table'>
        <tr>
            <th>id</th>
            <th>titre</th>
            <th>résumé</th>
            <th>contenu</th>
        </tr> 
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.header }}</td>
                <td>{{ article.content }}</td>
            </tr>
        {% endfor %}
    </table>    
    
{% endblock %}

