{% extends "layout.html.twig" %}

{% block title 'Admin article' %}
    
{% block content %}
    <h1>Gestion Articles</h1>
    
    <!-- On ajoute un lien vers la vue d'edition des articles -->
    <p><a href="{{ path('admin_article_edit') }}">Nouvel article</a></p>
    
    <table class='table'>
        <tr>
            <th>id</th>
            <th>titre</th>
            <th>résumé</th>
            <th>rubrique</th>
            <th width="200"></th>
        </tr> 
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.header }}</td>
                <td>{{ article.categoryName }}</td>
                <td>
                    <a href="{{ path('admin_article_edit', {id: article.id}) }}" class="btn btn-primary">
                       Modifier
                    </a>
                    <a href="{{ path('admin_article_delete', {id: article.id}) }}" class="btn btn-danger">
                       Supprimer
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>    
    
{% endblock %}

