{% extends "layout.html.twig" %}

{% block title 'Admin rubrique' %}
    
{% block content %}
    <h1>Gestion Rubriques</h1>
    
    <!-- On ajoute un lien vers la vue d'edition de catÃ©gories -->
    <p><a href=" {{ path('admin_category_edit')}}">Nouvelle rubrique</a></p>
    
    <table class='table'>
        <tr>
            <th>id</th>
            <th>Nom</th>
            <th width="200"></th>
            <th width="200"></th>
        </tr> 
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('admin_category_edit', {id: category.id}) }}" class="btn btn-primary">
                       Modifier
                    </a>
                </td>
                <td>
                    <a href="{{ path('admin_category_delete', {id: category.id}) }}" class="btn btn-danger">
                       Supprimer
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>    
    
{% endblock %}
